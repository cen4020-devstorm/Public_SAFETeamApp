<div class="container mx-auto pt-75 flex justify-center items-center h-screen" style="background-color: #006747;">
  <body class="text-center font-sans text-white flex justify-center items-center w-full" style="background-color: #006747;">
    <div>
      <%= image_tag "USFLogo.png", alt: "Login Banner", class: "w-80 h-auto mx-auto mt-10 object-cover rounded-t-lg" %>
    <div class="p-8">
    <div class="bg-white rounded-lg shadow-lg p-8 w-96 text-black">
    <h1 class="font-bold underline text-xl mb-4" style="color: #006747;">Register</h1>

      <% if @user.errors.any? %>
        <div style="color: red;">
          <h3><%= pluralize(@user.errors.count, "error") %> prevented registration:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: signup_path, method: :post, local: true, data: { turbo: false } do |form| %>
        <div class="text-left">
          <%= form.label :username, class: "font-semibold text-sm text-gray-700" %><br>
          <%= form.text_field :username, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 text-black" %>
        </div>

        <div class="text-left">
          <%= form.label :password, class: "font-semibold text-sm text-gray-700" %><br>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 text-black" %>
        </div>

        <div class="text-left">
          <%= form.label :password_confirmation, class: "font-semibold text-sm text-gray-700" %><br>
          <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 text-black" %>
        </div>

        <div class = "mt-4">
          <%= form.submit "Register", class: "w-full bg-green-700 hover:bg-green-800 text-white font-semibold py-2 px-4 rounded-md transition duration-200" %>
        </div>
      <% end %>

      <p class="mt-4 text-sm text-gray-600">
      Already have an account? <%= link_to "Log in here", login_path, class: "text-green-600 hover:underline" %>
      </p>