<div class="container mx-auto pt-75 flex justify-center items-center h-screen" style="background-color: #006747;">
  <body class="text-center font-sans text-white flex justify-center items-center w-full" style="background-color: #006747;">
    <div>
      <%= image_tag "USFLogo.png", alt: "Login Banner", class: "w-80 h-auto mx-auto my-auto my-4 object-cover rounded-t-lg" %>
    <div class="p-8">
    <div class="bg-white rounded-lg shadow-lg p-8 w-96 text-black">
      
      <h1 class="font-bold underline text-xl mb-4" style="color: #006747;">Login</h1>

      <% if flash[:alert] %>
        <p class="text-red-500 mb-4"><%= flash[:alert] %></p>
      <% end %>

      <%= form_with url: login_path, method: :post, local: true, data: { turbo: false }, class: "space-y-4" do |form| %>
        <div class="text-left">
          <%= form.label :username, class: "font-semibold text-sm text-gray-700" %><br>
          <%= form.text_field :username, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 text-black" %>
        </div>

        <div class="text-left">
          <%= form.label :password, class: "font-semibold text-sm text-gray-700" %><br>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 text-black" %>
        </div>

        <div>
          <%= form.submit "Login", class: "w-full bg-green-700 hover:bg-green-800 text-white font-semibold py-2 px-4 rounded-md transition duration-200" %>
        </div>
      <% end %>

      <p class="mt-4 text-sm text-gray-600">
        Don't have an account? <%= link_to "Register here", signup_path, class: "text-green-600 hover:underline" %>
      </p>
    </div>
    <%= link_to "â† Back to Home", root_path, method: :delete, class: "inline-block text-white underline hover: text-gray-300 transition mt-4" %>
  </body>
</div>